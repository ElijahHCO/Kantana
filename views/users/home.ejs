<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="stylesheet" href="/css/home.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
</head>

<body>

    <main class="wrapper">
        <%- include('../partials/nav') %>
            <%- include('../partials/messages') %>

                <div class="box">
                    <section class="userProfile">
                        <% if (messages.error) { %>
                            <%= messages.error %>
                                <% } %>
                                    <h1 id="usernameDisplay">
                                        <%= userObject.name %>
                                    </h1>
                                    <h1>
                                        <%= userObject.username %>
                                    </h1>
                                    <p> Hobbies:
                                        <% userObject.hobbies.forEach((hobby, index)=> { %>
                                            <%= hobby %>
                                                <% if (index !=userObject.hobbies.length -1){ %>
                                                    ,
                                                    <% } %>
                                                        <% }); %>
                                    </p>
                                    <% if(userObject.city){ %>
                                        <p>
                                            <%= userObject.city %> , <%= userObject.state %>
                                        </p>
                                        <% } %>

                    </section>
                    <section class="instrumentList">
                        <h4>Items Currently for sale:</h4>
                        <% if(instruments){%>
                            <ul class="itemsForSale">
                                <% instruments.forEach((instrument)=>{ %>
                                    <li class="instruments"><a href="/instruments/<%=instrument._id%>">
                                            <%=instrument.name%>
                                        </a></li>
                                    <% }) %>
                            </ul>
                            <% } %>



                                </a>
                    </section>

                </div>

    </main>
</body>

</html>